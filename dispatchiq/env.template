# Copy this file to .env.local and fill in your actual values

# Twilio Configuration
# Get these from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here

# Deepgram Configuration  
# Get this from: https://console.deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Gemini Configuration (already in use for /api/analyze)
# Get this from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL_ID=gemini-2.5-flash

# Supabase Configuration
# Get these from: https://app.supabase.com/ → Project Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Server Configuration
PORT=3001

# WebSocket URL for Dashboard (defaults to ws://localhost:3001/dashboard if not set)
NEXT_PUBLIC_WS_URL=ws://localhost:3001/dashboard

# PUBLIC_HOST should be your ngrok URL WITHOUT the https:// prefix
# Example: abc123.ngrok.io (NOT https://abc123.ngrok.io)
PUBLIC_HOST=your_ngrok_url_here

# Dispatcher Phone Number (your phone number that will answer calls)
# Format: +1234567890 (include country code)
DISPATCHER_PHONE=+1234567890

# Voice routing mode for /twilio/voice
# ai          → user talks to AI agent (default)
# dispatcher  → call routes to DISPATCHER_PHONE
VOICE_MODE=ai
